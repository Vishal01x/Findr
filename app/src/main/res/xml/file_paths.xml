<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Allow access to the cache directory -->
    <cache-path name="cache" path="." />

    <!-- Grant access to files in internal app-specific storage -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- OR grant access to the Downloads/MyChatApp folder -->
    <external-path
        name="downloads"
        path="Download/Let's Talk/" />

    <external-files-path
        name="images"
        path="Pictures/" />

</paths>
